.root {
  outline: none;
  border-radius: 50%;
  box-shadow: 1px 1px 8px 0 rgba(185, 185, 200, 0.64);
  width: 30px;
  height: 30px;
  background-color: white;
  cursor: pointer;
}

.root i {
  transition: .2s color;
  position: relative;
  right: 1px;
}

.root a {
  text-decoration: none;
  display: block;
  width: 100%;
  height: 100%;
}

.root:hover i
{
  color: #c78bfe !important;
}

.hidden {
  display: none;
}
