.root {
  position: relative;
  min-width: 250px;
}

.line {
  position: absolute;
  width: 2px;
  height: 100%;
  background-color: #e3e4e6;
  right: 5px;
}

.icon {
  outline: none;
  position: absolute;
  right: 13px;
  cursor: pointer;
  z-index: 2;
}

.collapsed {
  min-width: 20px;
  width: 20px;
}

.collapsed .icon {
  right: 0;
}

.collapsed .content {
  display: none;
}
