.root {
  border-radius: 5px;
  box-shadow: 1px 1px 8px 0 rgba(185, 185, 200, 0.64);
  font-family: Lato, sans-serif;
}

.root hr {
  background: #f3f3f3;
  border: 0;
  height: 2px;
}

.content {
  background-color: white;
  padding: 20px 15px 20px 15px;
  box-sizing: border-box;
}

.title {
  font-size: 14px;
  color: #393f52;
  font-weight: bold;
  margin-bottom: 10px;
}

.description {
  font-size: 12px;
  color: #7f8590;
  margin-bottom: 6px;
}
