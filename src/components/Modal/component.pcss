.hidden {
  display: none;
}

.hidden .content {
  transform: translate(-50%, -50%) scale(0.7);
  opacity: 0;
}

.overlay {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0,0,0,.6);
  z-index: 3;
}

.content {
  overflow: hidden;
  border-radius: 5px;
  background-color: white;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) scale( 1 );
  z-index: 3;
  opacity: 1;
  transition: all 0.3s linear;
}
