.input {
  width: 100%;
  border: solid 1px rgba(201, 205, 211, 0.54);
  border-radius: 4px;
  background-color: rgba(246, 247, 249, 0.54);
  padding: 10px 19px;
  user-select: none;
  cursor: pointer;
  box-sizing: border-box;
}

.input.open {
  border-bottom-left-radius: 0 !important;
  border-bottom-right-radius: 0 !important;
}

.label {
  font-family: Lato, sans-serif;
  font-size: 16px;
  color: #c2c2c2;
}
